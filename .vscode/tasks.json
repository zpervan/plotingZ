{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build | Release",
      "type": "shell",
      "windows": {
        "command": "bazel build --config=windows //..."
      },
      "linux": {
        "command": "bazel build --config=linux //..."
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
    },
    {
      "label": "Build | Debug",
      "type": "shell",
      "windows": {
        "command": "bazel build --config=windows //... -c dbg"
      },
      "linux": {
        "command": "bazel build --config=linux //... -c dbg"
      },
      "group": "build"
    }
  ]
}